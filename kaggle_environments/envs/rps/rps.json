{
  "name": "rps",
  "title": "Rock Paper Scissors",
  "description": "Repeated Rock Paper Scissors",
  "version": "1.0.0",
  "agents": [2],
  "configuration": {
    "weapons": {
      "description": "Number of choices each round eg. (rock 1, paper 2, scissors 3, ...).",
      "type": "integer",
      "minimum": 3,
      "default": 5
    },
    "steps": {
      "description": "Maximum number of rounds the environment can run. Total is this number -1.",
      "type": "integer",
      "minimum": 1,
      "default": 100
    }
  },
  "reward": {
    "description": "0 = Lost, 0.5 = Draw, 1 = Won",
    "enum": [0, 0.5, 1],
    "default": 0.5
  },
  "observation": {
    "p1_moves": {
      "description": "History of moves by player 1",
      "type": "array",
      "default": []
    },
    "p2_moves": {
      "description": "History of moves by player 2",
      "type": "array",
      "default": []
    },
    "results":{
      "description": "Winners for each round listed",
      "type": "array",
      "default": []
    },
    "mark": {
      "description": "Mark for the agent to use",
      "enum": [1, 2]
    }
  },
  "action": {
    "description": "Choice of weapon for the round. (Rock = 1, Paper = 2, Scissors = 3, etc)",
    "type": "integer",
    "minimum": 1,
    "default": 1
  }
}